<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sri.harsha.ramini.tourguide"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="27" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="sri.harsha.ramini.tourguide.SplashActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sri.harsha.ramini.tourguide.MainActivity"
            android:label="City Tour"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="sri.harsha.ramini.tourguide.TopSpots"
            android:label="Top Spots"
            android:parentActivityName="sri.harsha.ramini.tourguide.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sri.harsha.ramini.tourguide.MainActivity" />
        </activity>
        <activity
            android:name="sri.harsha.ramini.tourguide.SneakPeek"
            android:parentActivityName="sri.harsha.ramini.tourguide.TopSpots"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sri.harsha.ramini.tourguide.MainActivity" />
        </activity>
        <activity android:name="sri.harsha.ramini.tourguide.examp" />
        <activity
            android:name="sri.harsha.ramini.tourguide.HotelsActivity"
            android:label="Hotels"
            android:parentActivityName="sri.harsha.ramini.tourguide.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sri.harsha.ramini.tourguide.MainActivity" />
        </activity>
        <activity
            android:name="sri.harsha.ramini.tourguide.About"
            android:label="About"
            android:parentActivityName="sri.harsha.ramini.tourguide.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sri.harsha.ramini.tourguide.MainActivity" />
        </activity>
        <activity
            android:name="sri.harsha.ramini.tourguide.LanguageActivity"
            android:label="Language"
            android:parentActivityName="sri.harsha.ramini.tourguide.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="sri.harsha.ramini.tourguide.ThingsToDo"
            android:label="Things To Do"
            android:parentActivityName="sri.harsha.ramini.tourguide.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sri.harsha.ramini.tourguide.MainActivity" />
        </activity>
    </application>

</manifest>